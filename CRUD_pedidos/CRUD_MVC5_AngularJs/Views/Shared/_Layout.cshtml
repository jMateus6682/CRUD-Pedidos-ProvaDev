<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title Prova Prática - Desenvolvedor</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="pedidos">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Prova Prática - Desenvolvedor", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
              
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="jumbotron">
            <h1 class="text-center"><span class="glyphicon glyphicon-log-out" aria-hidden="true"></span>&nbsp; CRUD: Cadastro de pedidos. (⌐■_■)</h1>
            <h4 class="text-left"> ⠀⠀</h4>
            <h4 class="text-left">⭐Desenvolvido utilizando: </h4>
            <h4 class="text-left"> ⠀⠀</h4>
            <h5 class="text-left">✨Visual Studio 2017;</h5>
            <h5 class="text-left">✨AngularJs 1.6.4;</h5>
            <h5 class="text-left">✨Asp.NET MVC 5;</h5>
            <h5 class="text-left">✨.NET Framework 4.5.2;</h5>
            <h5 class="text-left">✨Entity Framework 5.0 (ADO.NET Entity Data Model);</h5>
        </div>

        @RenderBody()
        <hr />
        <footer>
            
            <p class="text-center">&copy; @DateTime.Now.ToString("dd/MM/yyyy") - My ASP.NET Application by João Mateus</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
